<%- include("partials/header") %>

<section>
    <table>
        <tr class="table_head">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Grade</th>
            <th>Favorite Subject</th>
            <th>Submit</th>
        </tr>
        <form action="/student/<%=student._id%>?_method=PUT" method="POST">
           <tr>
            <td><input name="firstname" value="<%=student.firstname%>" /></td>
